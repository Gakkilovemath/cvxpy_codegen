#include "codegen.h"
#include <stdio.h>


void json_vector_long(long *x, long len){
    long i;
    printf("[");
    if (len > 0){
      for (i=0; i<len-1; i++){
          printf("%ld,", x[i]);
      }
      printf("%ld", x[len-1]);
    }
    printf("]");
}

void json_vector_double(double *x, long len){
    long i;
    printf("[");
    if (len > 0){
      for (i=0; i<len-1; i++){
          printf("%9.9lf,", x[i]);
      }
      printf("%9.9lf", x[len-1]);
    }
    printf("]");
}


void solver_init(Work *work);
void expr_handler_init(Work *work);
void fill_matrices(Params *params, Work *work);


int main(){
    
    Params params;
    Work work;

    {% for p in named_params %}
      {%- if p.is_scalar() -%}
    params.{{ p.name }} = {{ p.value }};
      {%- elif p.is_vector() -%}
        {% for i in range(p.shape[0]) %}
    params.{{ p.name }}[{{ i }}] = {{ p.value[i] }};
        {% endfor %}
      {%- else -%}
        {% for i in range(p.shape[0]) %}
          {% for j in range(p.shape[1]) %}
    params.{{ p.name }}[{{ i }}][{{ j }}] = {{ p.value[i,j] }};
          {% endfor %}
        {% endfor %}
      {%- endif -%};
    {% endfor %}


    expr_handler_init(&work);
    solver_init(&work);
    fill_matrices(&params, &work);


    {% if solver_name == 'ecos' %}
      printf("{");

        /* Objective. */
        printf("\"obj_coeff\":");
        json_vector_double(work.obj_coeff, {{ x_length }});
        printf(",");
        printf("\"obj_offset\":%9.9lf", work.obj_offset);

        /* Equality constraint. */
        printf(",");
        printf("\"eq_shape0\":%d", work.eq_coeff.m);
        printf(",");
        printf("\"eq_shape1\":%d", work.eq_coeff.n);

        printf(",");
        printf("\"eq_colptr\":");
        json_vector_long(work.eq_coeff.p, work.eq_coeff.n+1);

        printf(",");
        printf("\"eq_rowidx\":");
        json_vector_long(work.eq_coeff.i, work.eq_coeff.nnz);

        printf(",");
        printf("\"eq_nzval\":");
        json_vector_double(work.eq_coeff.x, work.eq_coeff.nnz);

        printf(",");
        printf("\"eq_offset\":");
        json_vector_double(work.eq_offset, work.eq_coeff.m);

        /* Inequality constraint. */
        printf(",");
        printf("\"leq_shape0\":%d", work.leq_coeff.m);
        printf(",");
        printf("\"leq_shape1\":%d", work.leq_coeff.n);

        printf(",");
        printf("\"leq_colptr\":");
        json_vector_long(work.leq_coeff.p, work.leq_coeff.n+1);

        printf(",");
        printf("\"leq_rowidx\":");
        json_vector_long(work.leq_coeff.i, work.leq_coeff.nnz);

        printf(",");
        printf("\"leq_nzval\":");
        json_vector_double(work.leq_coeff.x, work.leq_coeff.nnz);

        printf(",");
        printf("\"leq_offset\":");
        json_vector_double(work.leq_offset, work.leq_coeff.m);

      printf("}");

    {% elif solver_name == 'osqp' %}

      printf("{");

        /* Affine part of objective. */
        printf("\"obj_coeff\":");
        json_vector_double(work.obj_coeff, {{ x_length }});
        printf(",");
        printf("\"obj_offset\":%9.9lf", work.obj_offset);

        /* Quadratic coefficient. */
        printf(",");
        printf("\"quad_shape0\":%d", work.quad_coeff.m);
        printf(",");
        printf("\"quad_shape1\":%d", work.quad_coeff.n);

        printf(",");
        printf("\"quad_colptr\":");
        json_vector_long(work.quad_coeff.p, work.quad_coeff.n+1);

        printf(",");
        printf("\"quad_rowidx\":");
        json_vector_long(work.quad_coeff.i, work.quad_coeff.nnz);

        printf(",");
        printf("\"quad_nzval\":");
        json_vector_double(work.quad_coeff.x, work.quad_coeff.nnz);

        /* Constraint. */
        printf(",");
        printf("\"constraint_shape0\":%d", work.constraint_coeff.m);
        printf(",");
        printf("\"constraint_shape1\":%d", work.constraint_coeff.n);

        printf(",");
        printf("\"constraint_colptr\":");
        json_vector_long(work.constraint_coeff.p, work.constraint_coeff.n+1);

        printf(",");
        printf("\"constraint_rowidx\":");
        json_vector_long(work.constraint_coeff.i, work.constraint_coeff.nnz);

        printf(",");
        printf("\"constraint_nzval\":");
        json_vector_double(work.constraint_coeff.x, work.constraint_coeff.nnz);

        printf(",");
        printf("\"constraint_offset\":");
        json_vector_double(work.constraint_offset, work.constraint_coeff.m);

      printf("}");

    {% endif %}

    return(0);
}
