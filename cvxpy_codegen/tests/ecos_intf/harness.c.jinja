#include "codegen.h"
#include <stdio.h>


void json_vector_long(long *x, long len){
    long i;
    printf("[");
    if (len > 0){
      for (i=0; i<len-1; i++){
          printf("%ld,", x[i]);
      }
      printf("%ld", x[len-1]);
    }
    printf("]");
}

void json_vector_double(double *x, long len){
    long i;
    printf("[");
    if (len > 0){
      for (i=0; i<len-1; i++){
          printf("%9.9lf,", x[i]);
      }
      printf("%9.9lf", x[len-1]);
    }
    printf("]");
}


void expr_handler_init(Work *work);
void fill_matrices(Params *params, Work *work);


int main(){
    
    Params params;
    Work work;

    {% for p in named_params %}
      {%- if p.is_scalar -%}
    params.{{ p.name }} = {{ p.value }};
      {%- elif p.is_column -%}
        {% for i in range(p.size[0]) %}
    params.{{ p.name }}[{{ i }}] = {{ p.value[i,0] }}; {# TODO should have no 0 idx? #}
        {% endfor %}
      {%- elif p.is_row -%}
        {% for j in range(p.size[1]) %}
    params.{{ p.name }}[{{ j }}] = {{ p.value[0,j] }};
        {% endfor %}
      {%- else -%}
        {% for i in range(p.size[0]) %}
          {% for j in range(p.size[1]) %}
    params.{{ p.name }}[{{ i }}][{{ j }}] = {{ p.value[i,j] }};
          {% endfor %}
        {% endfor %}
      {%- endif -%};
    {% endfor %}


    expr_handler_init(&work);

    fill_matrices(&params, &work);


    printf("{");

      /* Objective constraint. */
      printf("\"obj_coeff\":");
      json_vector_double(work.obj_vec, {{ x_length }});
      printf(",");
      printf("\"obj_offset\":%9.9lf", work.obj_offset);

      /* Equality constraint. */
      printf(",");
      printf("\"eq_size0\":%d", {{ eq_dim }});
      printf(",");
      printf("\"eq_size1\":%d", {{ x_length }});

      printf(",");
      printf("\"eq_colptr\":");
      json_vector_long(work.eq_coeff.p, {{ x_length+1 }});

      printf(",");
      printf("\"eq_rowidx\":");
      json_vector_long(work.eq_coeff.i, {{ eq_coeff.nnz }});

      printf(",");
      printf("\"eq_nzval\":");
      json_vector_double(work.eq_coeff.x, {{ eq_coeff.nnz }});

      printf(",");
      printf("\"eq_offset\":");
      json_vector_double(work.eq_offset, {{ eq_dim }});

      /* Inequality constraint. */
      printf(",");
      printf("\"leq_size0\":%d", {{ leq_dim }});
      printf(",");
      printf("\"leq_size1\":%d", {{ x_length }});

      printf(",");
      printf("\"leq_colptr\":");
      json_vector_long(work.leq_coeff.p, {{ x_length+1 }});

      printf(",");
      printf("\"leq_rowidx\":");
      json_vector_long(work.leq_coeff.i, {{ leq_coeff.nnz }});

      printf(",");
      printf("\"leq_nzval\":");
      json_vector_double(work.leq_coeff.x, {{ leq_coeff.nnz }});

      printf(",");
      printf("\"leq_offset\":");
      json_vector_double(work.leq_offset, {{ leq_dim }});

    printf("}");

    return(0);
}
