{% import "utils/utils.c.jinja" as u with context %}


{% macro transpose_declare() -%}
void transpose(long m, long n,
               long *Ap, long *Ai, double *Ax,
               long *Atp, long *Ati, double *Atx);
{%- endmacro %}


{% macro transpose_define() %}
void transpose(long m, long n,
               long *Ap, long *Ai, double *Ax,
               long *Atp, long *Ati, double *Atx){
    long i, j, k, ind;


    for (k=0; k<=m; k++)  Atp[k] = 0;
    for (k=0; k<Ap[n]; k++) Atp[Ai[k]+1]++;
    for (j=0; j<m; j++) Atp[j+1] += Atp[j];

    for (j=0; j<n; j++){
        for (k=Ap[j]; k<Ap[j+1]; k++){
            i = Ai[k];
            ind = Atp[i];
            Ati[ind] = j;
            Atx[ind] = Ax[k];
            Atp[i]++;
        }
    }
    for (j=m; j>0; j--){
        Atp[j] = Atp[j-1];
    }
    Atp[0] = 0;
}
{% endmacro %}


{% macro transpose_eval(expr) %}
transpose({{ expr.size[0] }}, {{ expr.size[1] }},
          {{ u.rowptr(expr.args[0]) }}, {{ u.colidx(expr.args[0]) }}, {{ u.nzval(expr.args[0]) }},
          {{ u.rowptr(expr) }}, {{ u.colidx(expr) }}, {{ u.nzval(expr) }});
{% endmacro %}






