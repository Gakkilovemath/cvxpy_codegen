{% import "utils/utils.c.jinja" as u with context %}


{% macro promote_declare() -%}
void promote(CsrMatrix *A, CsrMatrix *Z);
{%- endmacro %}


{% macro promote_define() %}
void promote(CsrMatrix *A, CsrMatrix *Z){
  long i, j, m=Z->m, n=Z->n, count=0;

  Z->p[0] = 0;
  for(i=0; i<m; i++){
    Z->p[i+1] = Z->p[i];
    for(j=0; j<n; j++){
      Z->j[count] = j;
      Z->x[count++] = A->x[0];
      Z->p[i+1]++;
    }
  }
}
{% endmacro %}


{% macro promote_eval(expr) %}
promote(&work->{{ expr.args[0].storage.name }}, &work->{{ expr.storage.name }});
{% endmacro %}
