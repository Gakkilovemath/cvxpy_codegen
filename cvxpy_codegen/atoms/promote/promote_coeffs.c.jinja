{% import "utils/utils.c.jinja" as u with context %}


{% macro promote_coeffs_declare() -%}
void promote_coeffs(LinopCoeff *A, LinopCoeff *Z);
{%- endmacro %}


{% macro promote_coeffs_define() %}
void promote_coeffs(LinopCoeff *A, LinopCoeff *Z){
  long i, p, p2, m=Z->m, count=0;

  Z->p[0] = 0;
  for(i=0; i<m; i++){
    Z->p[i+1] = Z->p[i];
    p2 = A->p[1];
    for(p=0; p<p2; p++){
      Z->j[count] = A->j[p];
      Z->x[count++] = A->x[p];
      Z->p[i+1]++;
    }
  }
}
{% endmacro %}


{% macro promote_coeffs_eval(expr) %}
promote_coeffs(&work->{{ expr.args[0].storage.name }}, &work->{{ expr.storage.name }});
{% endmacro %}
