{% import "utils/utils.c.jinja" as u with context %}


{% macro sum_declare() %}
void sum(CsrMatrix *A, CsrMatrix *Z);
{% endmacro %}


{% macro sum_define() %}
void sum(CsrMatrix *A, CsrMatrix *Z){
  long i, j, p, p2, m=A->m;
  Z->p[0] = 0;
  Z->p[1] = 1;
  Z->j[0] = 0;
  Z->x[0] = 0;
  Z->m = 1;
  Z->n = 1;
  Z->nnz = 1;
  for(i=0; i<m; i++){
    p2 = A->p[i+1];
    for(p=A->p[i]; p<p2; p++){
      Z->x[0] += A->x[p];
    }
  }
}


{% endmacro %}


{% macro sum_eval(expr) %}
sum(&work->{{expr.args[0].storage.name}}, &work->{{expr.storage.name}});
{% endmacro %}
