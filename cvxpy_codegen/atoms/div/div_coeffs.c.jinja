{% import "utils/utils.c.jinja" as u with context %}


{% macro div_coeffs_declare() -%}
void div_coeffs(LinopCoeff A, double divisor);
{%- endmacro %}


{% macro div_coeffs_define() %}
void div_coeffs(LinopCoeff A, double divisor){
  long i, nnz=A.nnz;
  for(i=0; i<nnz; i++){
    A.x[i] = A.x[i] / divisor;
  }
}
{% endmacro %}


{% macro div_coeffs_eval(expr) %}
div_coeffs(work->{{ expr.storage.name}}, work->{{expr.args[1].storage.name}}.x[0]);
{% endmacro %}
